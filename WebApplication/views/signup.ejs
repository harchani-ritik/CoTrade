	<form method="POST" action="/submit_signup" >
			<div class="login-html">
				<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"></label>
				<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
				<div class="login-form">
					<div class="sign-in-htm">
						<div class="group">
							<!-- <label for="email" class="label">Email</label> -->
							<input id="email" type="email" class="input" name="email" placeholder="Email">
						</div>
						<div class="group">
							<!-- <label for="password" class="label">Password</label> -->
							<input id="password" type="password" class="input" data-type="password" name="password" placeholder="Password">
            </div>
            <div class="group">
							<!-- <label for="userId" class="label">Username</label> -->
							<input id="userId" type="text" class="input" name="userId" placeholder="Username">
            </div>
            <div class="group">
							<!-- <label for="phoneno" class="label">Phone Number</label> -->
							<input id="phoneno" type="number" class="input" name="phoneno" placeholder="Phone Number">
						</div>
            <div class="group">
							<!-- <label for="firstName" class="label">Name</label> -->
							<input id="firstName" type="text" class="input" name="firstName" placeholder="Name">
            </div>
           
						<div class="group">
							<!-- <input type="submit" class="button" value="Sign In"> -->
						<!-- </div> -->
            <button id="addBtn" class="button">Register</button>
                </div>
					</div>
				</div>
			</div>
	</div>

	</form>
